<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter"/>

    <property name="CONSOLE_LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %clr(%5level) %cyan(%logger) - %msg%n"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>./logs/application.log</file>
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <appender name="KAFKA" class="ch.qos.logback.classic.net.KafkaAppender">
        <topic>logs</topic>
        <bootstrapServers>localhost:9092</bootstrapServers>
        <keyEncoder>org.apache.kafka.common.serialization.StringSerializer</keyEncoder>
        <valueEncoder>org.apache.kafka.common.serialization.StringSerializer</valueEncoder>
    </appender>


    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

    <logger name="com.tripcok.tripcokserver.global.interceptor" level="INFO">
        <appender-ref ref="FILE"/>
        <appender-ref ref="KAFKA"/>
    </logger>

</configuration>